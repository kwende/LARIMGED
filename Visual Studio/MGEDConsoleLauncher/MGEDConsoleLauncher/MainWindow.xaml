<Window x:Class="MGEDConsoleLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console Launcher" Height="600" Width="525" ResizeMode="NoResize">
    <Grid>
        <ListBox Name="TheProcessesList" Margin="33,36,34,442" ItemsSource="{Binding}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <RadioButton Checked="RadioButton_Checked_1" GroupName="Apps" Content="{Binding Path=TheText}" Tag="{Binding Path=TheValue}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="To Launch:" HorizontalAlignment="Left" Margin="22,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="OutputFile_TextBox" HorizontalAlignment="Left" Height="23" Margin="99,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="296"/>
        <TextBox x:Name="InputFile_TextBox" HorizontalAlignment="Left" Height="23" Margin="99,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="296"/>
        <Label Content="Input File:" HorizontalAlignment="Left" Margin="22,152,0,0" VerticalAlignment="Top"/>
        <Label Content="Output File:" HorizontalAlignment="Left" Margin="22,183,0,0" VerticalAlignment="Top"/>
        <Button x:Name="InputFile_Button" Content="Browse" HorizontalAlignment="Left" Margin="410,152,0,0" VerticalAlignment="Top" Width="75" Click="InputFile_Button_Click"/>
        <Button x:Name="OutputFile_Button" Content="Browse" HorizontalAlignment="Left" Margin="410,180,0,0" VerticalAlignment="Top" Width="75" Click="OutputFile_Button_Click"/>
        <Label Content="Extra Arguments (separate with spaces):" HorizontalAlignment="Left" Margin="22,220,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="OutputFile_TextBox_Copy" HorizontalAlignment="Left" Height="23" Margin="33,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="362"/>
        <Button x:Name="Launch_Button" Content="Execute" HorizontalAlignment="Left" Margin="410,290,0,0" VerticalAlignment="Top" Width="75" Click="Launch_Button_Click"/>
        <GroupBox Header="Results" HorizontalAlignment="Left" Margin="44,355,0,0" VerticalAlignment="Top" Height="189" Width="441">
            <TextBlock Margin="0,0,-2,0" Name="TextBlock_Output" TextWrapping="Wrap" />
        </GroupBox>

    </Grid>
</Window>
